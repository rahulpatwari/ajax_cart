        $("body").on("click",".dec",function(){
            var cart=$(this).parents().eq(1).attr("id");
            var remove="remove";
            $.get("controller/cart.php",{
            cart:cart,remove:remove}
                 ,function(data){
           location.reload();
          });
        });

         $("body").on("click",".inc",function(){
            var cart=$(this).parents().eq(1).attr("id");
            var add="add";
            $.get("controller/cart.php",{
            cart:cart,add:add}
                 ,function(data){
                 location.reload();
            // $("#resultcat").html(data);
          });
        });

